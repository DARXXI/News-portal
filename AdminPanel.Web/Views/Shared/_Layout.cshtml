@using Microsoft.AspNetCore.Authorization
@using AdminPanel.Domain.Entities
@inject IAuthorizationService AuthorizationService



<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Панель Администратора</title>
    
    

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.css"/>
    <link rel="stylesheet" href="~/lib/Foundation/css/foundation.css"/>
    <script src="~/lib/moment/moment-with-locales.min.js"></script>
    <script src="~/lib/moment/moment.js"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/lib/sweetalert2/swal-api.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    
    <script src="https://cdn.tiny.cloud/1/f9mc8r9ivjy5i6cawjl7dqbwx3njcx378yig9t50qs3waqbg/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    
    

    

</head>
<body>
<div class="window-size">

    <header class="p-3 bg-light">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li>
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                    </li>
                    <li>
                        <a class="navbar-brand" asp-area="" asp-controller="Users" asp-action="Index">Пользователи</a>
                    </li>
                    <li>
                        <a class="navbar-brand" asp-area="" asp-controller="News" asp-action="Index">Новости</a>
                    </li>
                    <li>
                        <a class="navbar-brand" asp-area="" asp-controller="Chat" asp-action="Message">Чат</a>
                    </li>
                </ul>

                <div class="row">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="col p-0">
                            <img src=@Url.RouteUrl(new {Controller = "Image", Action = "Index", hash = @ViewBag.ImageHash})
                                class="round cropped"/>
                        </div>
                        
                        <div class="dropdown col" id="profile">
                            <a  class="dropdown-toggle" data-bs-toggle="dropdown">@User.Identity.Name</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index">Мой аккаунт</a></li>
                                <li><a class="me-2 dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Выйти</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a class="me-2" asp-area="" asp-controller="Account" asp-action="Login">Войти</a>
                    }
                </div>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</div>
    <footer class="p-2 myfooter bg-light social-footer">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <div class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
            &copy; @DateTime.Now.Year - Новостной портал
            </div>

            <div class="social-footer-icons">
                <ul class="menu simple">
                    <li><a href="https://www.facebook.com/"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                    <li><a href="https://www.instagram.com/?hl=en"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                    <li><a href="https://www.pinterest.com/"><i class="fa fa-pinterest-p" aria-hidden="true"></i></a></li>
                    <li><a href="https://twitter.com/?lang=en"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
</footer>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/sweetalert2/sweetalert2.all.js"></script>
<script src="~/lib/sweetalert2/324dccf590.js" crossorigin="anonymous"></script>

<script src="~/lib/agGrid/agGrid-locale/locale.ru.js"></script>
@*<script src="~/lib/TinyMCE/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>*@
<script src="~/lib/Foundation/app.js"></script>
<script src="~/lib/Foundation/vendor/foundation.js"></script>
<script src="~/lib/Foundation/vendor/what-input.js"></script>

<script src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/lib/jquery-SerializeToJSON/jquery.serializeToJSON.js"></script>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script type="text/javascript" src="~/lib/jquery/dist/messages_ru.js"></script>

@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
